{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "start",
      "configurations": [
        "auth (service)",
        "issue-tracker (service)",
        "mail (service)",
        "issue-tracker (client)",
        "brave (debug - scoop)"
      ]
    }
  ],
  "configurations": [
    {
      "name": "issue-tracker (client)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["client"],
      "console": "integratedTerminal"
    },
    {
      "name": "brave (debug - scoop)",
      "request": "launch",
      "type": "chrome",
      "runtimeExecutable": "C:\\Users\\Soura\\scoop\\apps\\brave\\current\\brave.exe",
      "userDataDir": true,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/clients/issue-tracker",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    },
    {
      "name": "auth (service)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["auth"],
      "console": "integratedTerminal"
    },
    {
      "name": "mail (service)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["mail"],
      "console": "integratedTerminal"
    },
    {
      "name": "issue-tracker (service)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["issue-tracker"],
      "console": "integratedTerminal"
    }
  ]
}
