{
  "name": "issue-tracker",
  "version": "1.0.0",
  "description": "A mono repo for web application that track issues in your projects",
  "scripts": {
    "client": "pnpm -F client run dev",
    "server": "skaffold dev",
    "issue-tracker": "pnpm -F @issue-tracker-services/issue-tracker run dev",
    "auth": "pnpm -F auth run dev",
    "mail": "pnpm -F mail run dev",
    "gen:auth-client": "redocly bundle ./openapi/auth.openapi.json --output ./clients/issue-tracker/src/api/generated/auth.openapi.json --remove-unused-components --dereferenced",
    "gen:issue-tracker-client": "redocly bundle ./openapi/issue-tracker.openapi.json --output ./clients/issue-tracker/src/api/generated/issue-tracker.openapi.json --remove-unused-components --dereferenced",
    "gen:storage-client": "redocly bundle ./openapi/storage.openapi.json --output ./clients/issue-tracker/src/api/generated/storage.openapi.json --remove-unused-components --dereferenced",
    "gen:hooks": "pnpm -F client run gen:hooks",
    "gen": "pnpm gen:auth-client && pnpm gen:issue-tracker-client && pnpm gen:storage-client && pnpm gen:hooks",
    "build": "pnpm -r --filter=!client build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "pnpm": ">=9.0.4",
    "node": ">=20.13.1"
  },
  "devDependencies": {
    "@redocly/cli": "^1.14.0"
  }
}
