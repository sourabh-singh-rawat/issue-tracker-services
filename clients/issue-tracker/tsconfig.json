{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2024",
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": [
      "vite/client"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}